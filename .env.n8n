# N8N Environment Configuration
# Copy this to .env and update with your values

# N8N Authentication
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=changeme-secure-password
N8N_HOST=n8n.yourdomain.com

# Database Configuration
DATABASE_USER=postgres
DATABASE_PASSWORD=your-secure-db-password
DATABASE_NAME=ai_finance_agency

# API Keys - Financial Data & AI
OPENAI_API_KEY=sk-proj-your-openai-key
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
FINNHUB_API_KEY=your-finnhub-key
NEWS_API_KEY=your-newsapi-key

# Social Media Credentials
# LinkedIn
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_ACCESS_TOKEN=your-linkedin-access-token
LINKEDIN_COMPANY_ID=your-company-id

# Twitter/X
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

# Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHANNEL_ID=@YourChannelName
TELEGRAM_API_ID=your-api-id
TELEGRAM_API_HASH=your-api-hash

# Monitoring & Alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
MONITORING_EMAIL=alerts@yourdomain.com

# System Configuration
TIMEZONE=Asia/Kolkata
NODE_ENV=production
LOG_LEVEL=info

# Rate Limits (requests per hour)
LINKEDIN_RATE_LIMIT=100
TWITTER_RATE_LIMIT=300
TELEGRAM_RATE_LIMIT=3600

# Content Generation Settings
CONTENT_GENERATION_INTERVAL=3600
MIN_CONTENT_LENGTH=100
MAX_CONTENT_LENGTH=2000
CONTENT_VARIETY_THRESHOLD=0.7

# Market Data Settings
MARKET_DATA_INTERVAL=900
SIGNIFICANT_MOVE_THRESHOLD=1.5
MARKET_OPEN_HOUR=9
MARKET_CLOSE_HOUR=16

# Feature Flags
ENABLE_LINKEDIN=true
ENABLE_TWITTER=true
ENABLE_TELEGRAM=true
ENABLE_MONITORING=true
ENABLE_AUTO_GENERATION=true
ENABLE_DUPLICATE_CHECK=true