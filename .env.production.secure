# AI Finance Agency - Production Environment Configuration
# ‚ö†Ô∏è  SECURITY CRITICAL: Never commit this file to version control
# üöÄ This file contains actual production secrets

# ==================== ENVIRONMENT ====================
NODE_ENV=production
APP_ENV=production
DEBUG=false
LOG_LEVEL=warn
VERSION=${BUILD_VERSION:-latest}

# ==================== DATABASE CONFIGURATION ====================
# PostgreSQL - Primary database
POSTGRES_DB=ai_finance_prod
POSTGRES_USER=ai_finance_prod_user
POSTGRES_PASSWORD=${POSTGRES_PROD_PASSWORD}  # REQUIRED: Set in secrets
POSTGRES_PORT=5432

# Redis - Cache and session storage
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379
REDIS_PASSWORD=${REDIS_PROD_PASSWORD}  # REQUIRED: Set in secrets
REDIS_PORT=6379
REDIS_MAX_MEMORY=512mb

# MongoDB - Document storage
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=${MONGO_PROD_PASSWORD}  # REQUIRED: Set in secrets
MONGO_DATABASE=ai_finance_prod
MONGO_PORT=27017

# RabbitMQ - Message broker
RABBITMQ_USER=ai_finance_prod_admin
RABBITMQ_PASSWORD=${RABBITMQ_PROD_PASSWORD}  # REQUIRED: Set in secrets
RABBITMQ_VHOST=ai_finance_prod
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# ==================== SECURITY ====================
JWT_SECRET=${JWT_PROD_SECRET}  # REQUIRED: 64+ char random string
SESSION_SECRET=${SESSION_PROD_SECRET}  # REQUIRED: 64+ char random string
ENCRYPTION_KEY=${ENCRYPTION_PROD_KEY}  # REQUIRED: 32 char AES key

# ==================== AI SERVICES ====================
# REQUIRED: Production API Keys
CLAUDE_API_KEY=${CLAUDE_PROD_API_KEY}
OPENAI_API_KEY=${OPENAI_PROD_API_KEY}
PERPLEXITY_API_KEY=${PERPLEXITY_PROD_API_KEY}

# ==================== PAYMENT PROCESSING ====================
# REQUIRED: Production payment credentials
STRIPE_SECRET_KEY=${STRIPE_PROD_SECRET_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_PROD_WEBHOOK_SECRET}
PAYPAL_CLIENT_ID=${PAYPAL_PROD_CLIENT_ID}
PAYPAL_CLIENT_SECRET=${PAYPAL_PROD_CLIENT_SECRET}

# ==================== MARKET DATA ====================
# REQUIRED: Production market data API keys
ALPHA_VANTAGE_API_KEY=${ALPHA_VANTAGE_PROD_KEY}
FINNHUB_API_KEY=${FINNHUB_PROD_KEY}
POLYGON_API_KEY=${POLYGON_PROD_KEY}

# ==================== NOTIFICATIONS ====================
# SendGrid
SENDGRID_API_KEY=${SENDGRID_PROD_KEY}
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Twilio
TWILIO_ACCOUNT_SID=${TWILIO_PROD_SID}
TWILIO_AUTH_TOKEN=${TWILIO_PROD_TOKEN}
TWILIO_PHONE_NUMBER=${TWILIO_PROD_PHONE}

# Slack
SLACK_WEBHOOK_URL=${SLACK_PROD_WEBHOOK}

# ==================== MONITORING ====================
SENTRY_DSN=${SENTRY_PROD_DSN}
PROMETHEUS_ENABLED=true
GRAFANA_PASSWORD=${GRAFANA_PROD_PASSWORD}

# ==================== MICROSERVICES PORTS ====================
API_GATEWAY_PORT=3000
PAYMENT_PORT=3001
USER_MANAGEMENT_PORT=3002
SIGNALS_PORT=3003
TRADING_PORT=3004
EDUCATION_PORT=3005
NOTIFICATION_PORT=3006
RISK_MANAGEMENT_PORT=3007
MARKET_DATA_PORT=3008
CONTENT_INTELLIGENCE_PORT=3009

# ==================== INFRASTRUCTURE ====================
CONSUL_PORT=8500
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
JAEGER_UI_PORT=16686
ELASTICSEARCH_PORT=9200
KIBANA_PORT=5601

# ==================== FEATURE FLAGS ====================
ENABLE_AI_GENERATION=true
ENABLE_AUTO_POSTING=true
ENABLE_COMPLIANCE_CHECK=true
ENABLE_MARKET_DATA=true
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true
AI_RISK_ANALYSIS_ENABLED=true

# ==================== PERFORMANCE ====================
WORKER_CONCURRENCY=4
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# ==================== BACKUP ====================
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=90
BACKUP_S3_BUCKET=${BACKUP_S3_BUCKET_NAME}
BACKUP_S3_REGION=us-east-1

# ==================== COMPLIANCE ====================
COMPLIANCE_LEVEL=strict
ENABLE_FINRA_CHECK=true
ENABLE_SEC_CHECK=true
ENABLE_AUDIT_LOGGING=true

# ==================== DOCKER PROFILES ====================
COMPOSE_PROFILES=production,monitoring,logging