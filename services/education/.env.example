# Server Configuration
PORT=3003
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_NAME=education_db
DB_SYNC=true
DB_LOGGING=false

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=24h

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,mp4,mp3,jpg,jpeg,png
UPLOAD_PATH=./uploads

# AWS Configuration (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Redis Configuration (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Certificate Configuration
CERTIFICATE_BASE_URL=https://certificates.aifinanceacademy.com
CERTIFICATE_TEMPLATE_PATH=./templates/certificates
ORGANIZATION_NAME=AI Finance Academy
ORGANIZATION_LOGO=

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@aifinanceacademy.com

# Microservices URLs
USER_MANAGEMENT_URL=http://localhost:3001
USER_MANAGEMENT_TIMEOUT=5000
API_GATEWAY_URL=http://localhost:3000
API_GATEWAY_TIMEOUT=5000

# Cache Configuration
CACHE_TTL=300
CACHE_MAX=100

# Monitoring
ENABLE_METRICS=false
METRICS_PATH=/metrics
HEALTH_PATH=/health

# Security
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=

# Feature Flags
ENABLE_CERTIFICATES=true
ENABLE_ASSESSMENTS=true
ENABLE_PROGRESS=true
ENABLE_UPLOADS=true
ENABLE_NOTIFICATIONS=true