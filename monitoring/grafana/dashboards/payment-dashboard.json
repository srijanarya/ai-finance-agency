{
  "dashboard": {
    "id": null,
    "title": "Payment Service Dashboard",
    "tags": ["ai-finance", "payment", "revenue"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Service Health",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"payment\"}",
            "legendFormat": "Status"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            },
            "mappings": [
              {"type": "value", "value": "0", "text": "DOWN"},
              {"type": "value", "value": "1", "text": "UP"}
            ]
          }
        },
        "gridPos": {"h": 4, "w": 4, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Daily Revenue",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(payment_revenue_total[24h]))",
            "legendFormat": "Revenue"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "currencyUSD"
          }
        },
        "gridPos": {"h": 4, "w": 4, "x": 4, "y": 0}
      },
      {
        "id": 3,
        "title": "Payment Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "(sum(rate(payment_transactions_total{status=\"success\"}[5m])) / sum(rate(payment_transactions_total[5m]))) * 100",
            "legendFormat": "Success Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 90},
                {"color": "green", "value": 95}
              ]
            },
            "unit": "percent"
          }
        },
        "gridPos": {"h": 4, "w": 4, "x": 8, "y": 0}
      },
      {
        "id": 4,
        "title": "Active Subscriptions",
        "type": "stat",
        "targets": [
          {
            "expr": "payment_active_subscriptions",
            "legendFormat": "Subscriptions"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "gridPos": {"h": 4, "w": 4, "x": 12, "y": 0}
      },
      {
        "id": 5,
        "title": "Failed Payments",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(payment_transactions_total{status=\"failed\"}[5m])",
            "legendFormat": "Failures/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 0.1},
                {"color": "red", "value": 1}
              ]
            },
            "unit": "short"
          }
        },
        "gridPos": {"h": 4, "w": 4, "x": 16, "y": 0}
      },
      {
        "id": 6,
        "title": "Churn Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "(sum(rate(payment_subscription_cancellations_total[24h])) / sum(payment_active_subscriptions)) * 100",
            "legendFormat": "Churn %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            },
            "unit": "percent"
          }
        },
        "gridPos": {"h": 4, "w": 4, "x": 20, "y": 0}
      },
      {
        "id": 7,
        "title": "Payment Volume",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(payment_transactions_total{status=\"success\"}[5m])",
            "legendFormat": "Successful Payments"
          },
          {
            "expr": "rate(payment_transactions_total{status=\"failed\"}[5m])",
            "legendFormat": "Failed Payments"
          }
        ],
        "yAxes": [
          {"label": "Transactions/sec"},
          {}
        ],
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 4}
      },
      {
        "id": 8,
        "title": "Revenue by Payment Method",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (method) (increase(payment_revenue_total[1h]))",
            "legendFormat": "{{method}}"
          }
        ],
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 4}
      },
      {
        "id": 9,
        "title": "Payment Processing Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, payment_processing_duration_seconds_bucket)",
            "legendFormat": "P50"
          },
          {
            "expr": "histogram_quantile(0.95, payment_processing_duration_seconds_bucket)",
            "legendFormat": "P95"
          },
          {
            "expr": "histogram_quantile(0.99, payment_processing_duration_seconds_bucket)",
            "legendFormat": "P99"
          }
        ],
        "yAxes": [
          {"label": "Seconds"},
          {}
        ],
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 10}
      },
      {
        "id": 10,
        "title": "Subscription Metrics",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(payment_subscription_new_total[1h])",
            "legendFormat": "New Subscriptions"
          },
          {
            "expr": "rate(payment_subscription_cancellations_total[1h])",
            "legendFormat": "Cancellations"
          },
          {
            "expr": "rate(payment_subscription_upgrades_total[1h])",
            "legendFormat": "Upgrades"
          }
        ],
        "yAxes": [
          {"label": "Subscriptions/hour"},
          {}
        ],
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 10}
      }
    ]
  }
}