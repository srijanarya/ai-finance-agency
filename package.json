{
  "name": "treum-algotech",
  "version": "1.0.0",
  "description": "TREUM ALGOTECH - AI-Powered Fintech Platform for Trading Education and Signals",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run test:e2e",
    "test:critical": "jest tests/critical-path --testTimeout=30000",
    "test:coverage": "turbo run test -- --coverage",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "docker:build": "turbo run docker:build",
    "docker:push": "turbo run docker:push",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "db:migrate": "turbo run db:migrate",
    "db:seed": "turbo run db:seed",
    "db:reset": "turbo run db:reset",
    "ci:build": "npm run typecheck && npm run lint && npm run test:unit && npm run build",
    "ci:test": "npm run test:unit && npm run test:integration",
    "ci:deploy-staging": "./scripts/deploy-staging.sh",
    "ci:deploy-production": "./scripts/deploy-production.sh",
    "performance:test": "artillery run tests/performance/api-load-test.yml",
    "security:audit": "npm audit --audit-level=moderate",
    "security:snyk": "snyk test",
    "start:prod": "turbo run start:prod"
  },
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/node": "^22.11.0",
    "eslint": "^8.57.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "turbo": "^2.1.3",
    "typescript": "^5.6.3"
  },
  "packageManager": "npm@10.9.0",
  "engines": {
    "node": "22.11.0",
    "npm": ">=10.0.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/treum-algotech/platform.git"
  },
  "keywords": [
    "fintech",
    "trading",
    "education",
    "signals",
    "crypto",
    "AI",
    "platform"
  ],
  "author": "TREUM ALGOTECH",
  "license": "PROPRIETARY"
}
