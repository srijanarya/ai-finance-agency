# TREUM Signal Service Production Environment Variables
# Secure configuration for ₹60-90 Cr revenue-generating signal service

# Application Settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=your-super-secure-secret-key-here-min-32-chars

# Database Configuration
DATABASE_URL=postgresql://treum_user:${POSTGRES_PASSWORD}@postgres:5432/treum_signals
DATABASE_HOST=postgres
DATABASE_USER=treum_user
DATABASE_NAME=treum_signals
POSTGRES_PASSWORD=your-secure-postgres-password

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["https://treum.in","https://app.treum.in","https://signals.treum.in"]
ALLOWED_HOSTS=["signals.treum.in","api.treum.in","localhost"]

# Signal Generation Settings
SIGNAL_GENERATION_INTERVAL=900  # 15 minutes
CRYPTO_SIGNAL_INTERVAL=1800     # 30 minutes
SIGNAL_EXPIRY_HOURS=4
MAX_SIGNALS_PER_HOUR=100
YAHOO_FINANCE_RATE_LIMIT=100

# WebSocket Configuration
WEBSOCKET_MAX_CONNECTIONS=10000
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_TIMEOUT=3600

# Security Settings
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# External API Keys
YAHOO_FINANCE_API_KEY=your-yahoo-finance-api-key
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key
TWELVE_DATA_API_KEY=your-twelve-data-api-key

# Notification Services
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=your-sendgrid-api-key
FROM_EMAIL=signals@treum.in

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/your-webhook-url
SLACK_CHANNEL=#signals-alerts

# SMS/WhatsApp (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notifications (Firebase)
FIREBASE_CREDENTIALS=path/to/firebase-credentials.json
FIREBASE_PROJECT_ID=treum-signals

# Monitoring & Alerting
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
PROMETHEUS_ENABLED=true
METRICS_ENDPOINT=/metrics

# Alert Configuration
ALERT_EMAIL_RECIPIENTS=["alerts@treum.in","devops@treum.in"]
ALERT_WEBHOOK_URL=https://your-alert-webhook.com
PAGERDUTY_ROUTING_KEY=your-pagerduty-routing-key

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]
CELERY_TIMEZONE=Asia/Kolkata

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_REQUESTS_PER_DAY=10000

# File Upload
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_PATH=/app/uploads
ALLOWED_FILE_TYPES=["image/jpeg","image/png","application/pdf"]

# Performance Settings
GUNICORN_WORKERS=4
GUNICORN_MAX_REQUESTS=1000
GUNICORN_TIMEOUT=60
GUNICORN_KEEPALIVE=5

# Market Data Settings
MARKET_DATA_CACHE_TTL=300  # 5 minutes
MARKET_HOURS_START=09:15
MARKET_HOURS_END=15:30
MARKET_TIMEZONE=Asia/Kolkata

# Revenue Tracking
BASIC_SUBSCRIPTION_PRICE=999
PRO_SUBSCRIPTION_PRICE=2999
ELITE_SUBSCRIPTION_PRICE=9999
CURRENCY=INR

# Monitoring Dashboard
GRAFANA_PASSWORD=your-secure-grafana-password
FLOWER_USERNAME=admin
FLOWER_PASSWORD=your-flower-password

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=treum-signals-backup

# SSL Configuration (if using custom certificates)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Feature Flags
ENABLE_CRYPTO_SIGNALS=true
ENABLE_EQUITY_SIGNALS=true
ENABLE_FOREX_SIGNALS=false
ENABLE_COMMODITY_SIGNALS=false
ENABLE_AUTO_TRADING=true
ENABLE_SOCIAL_SENTIMENT=true

# API Throttling
API_THROTTLE_RATE=100/hour
WEBSOCKET_THROTTLE_RATE=5/second
SIGNAL_GENERATION_THROTTLE=10/minute

# Data Retention
SIGNAL_RETENTION_DAYS=30
ANALYTICS_RETENTION_DAYS=90
LOG_RETENTION_DAYS=7
METRICS_RETENTION_DAYS=15

# Geographic Settings
DEFAULT_TIMEZONE=Asia/Kolkata
SUPPORTED_LOCALES=["en-IN","hi-IN"]
DEFAULT_CURRENCY=INR

# AI/ML Configuration
MODEL_UPDATE_INTERVAL_HOURS=24
MODEL_CONFIDENCE_THRESHOLD=0.6
TECHNICAL_INDICATOR_PERIOD=14
SIGNAL_ACCURACY_TARGET=0.75

# Business Metrics
TARGET_MONTHLY_REVENUE=5000000  # ₹50 Lakhs
TARGET_DAILY_SIGNALS=500
TARGET_USER_ENGAGEMENT=0.75
TARGET_SIGNAL_ACCURACY=0.75

# Compliance & Legal
DATA_PRIVACY_ENABLED=true
GDPR_COMPLIANCE=true
SEBI_COMPLIANCE=true
KYC_REQUIRED=true
AUDIT_LOGGING=true

# Emergency Settings
EMERGENCY_STOP_ENABLED=false
MAINTENANCE_MODE=false
CIRCUIT_BREAKER_THRESHOLD=10
MAX_ERROR_RATE=0.05