# TalkingPhoto AI MVP - Environment Configuration

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/talkingphoto_mvp
REDIS_URL=redis://localhost:6379/0

# AI Service API Keys
NANO_BANANA_API_KEY=your-nano-banana-api-key
VEO3_API_KEY=your-veo3-api-key
RUNWAY_API_KEY=your-runway-api-key
OPENAI_API_KEY=your-openai-api-key

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=talkingphoto-mvp-storage

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# File Upload Configuration
MAX_CONTENT_LENGTH=10485760  # 10MB
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Monitoring
PROMETHEUS_METRICS_PORT=8000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Email Configuration (for notifications)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@talkingphoto.ai

# CDN Configuration
CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net